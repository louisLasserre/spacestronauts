<h1>Companies</h1>

<div id="companies">
  <% @companies.each do |company| %>
    <div class="crudBox">
      <%= render company %>
      <p>
        <%= link_to "Show this company", company, class:"button" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New company", new_company_path, class:"button" %>

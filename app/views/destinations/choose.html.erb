<h1><strong>#1 </strong> Choisissez la destination</h1>


<section class="sectionChoose">

<% @destinations.each do |dest| %>
  <a href="/chooseDestination/<%= dest.id %>">
  <div class="destBox" style="background-image: url(<%= rails_blob_url(dest.banner) %>)">

    <article>
      <h2><%= dest.planet %></h2>

      <p><%= dest.description %></p>
    </article>

  </div></a>
<% end %>
</section>
